<?xml version="1.0" encoding="utf-8"?>
<MotionScene 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@id/start"
        motion:autoTransition="animateToEnd"
        motion:duration="1100">
       <KeyFrameSet>
       </KeyFrameSet>
    </Transition>

    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/backgroundView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            motion:layout_constraintHeight_percent="0.3"
            motion:layout_constraintTop_toTopOf="parent"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/profileImageView"
            android:layout_width="107dp"
            android:layout_height="107dp"
            motion:layout_constraintBottom_toBottomOf="@id/backgroundView"
            android:layout_marginStart="39dp"
            motion:layout_constraintTop_toTopOf="@id/backgroundView"
            motion:layout_constraintStart_toStartOf="@id/backgroundView"
            android:visibility="invisible"
            android:translationY="10dp" />
        <Constraint
            android:id="@+id/usernameTextView"
            motion:layout_constraintStart_toEndOf="@+id/profileImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            motion:layout_constraintTop_toTopOf="@+id/profileImageView"
            android:translationY="10dp" />
        <Constraint
            android:id="@+id/appCompatTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/usernameTextView"
            motion:layout_constraintStart_toStartOf="@+id/usernameTextView"
            android:layout_marginTop="11dp"
            android:translationY="10dp" />
        <Constraint
            android:id="@+id/floatingActionButton"
            motion:layout_constraintEnd_toEndOf="parent"
            android:layout_width="65dp"
            android:layout_height="65dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="30dp"
            android:layout_marginEnd="12dp"
            android:translationY="10dp"
            motion:transitionEasing="linear"
            android:visibility="invisible" />
        <Constraint
            android:id="@+id/currentTasksTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/backgroundView"
            android:layout_marginStart="25dp"
            motion:layout_constraintStart_toStartOf="@+id/backgroundView"
            android:layout_marginTop="20dp"
            android:visibility="invisible"
            android:translationY="10dp" />
        <Constraint
            android:id="@+id/currentTaskRecycleView"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            motion:layout_constraintTop_toBottomOf="@id/currentTasksTextView"
            android:visibility="invisible" />
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/usernameTextView"
            motion:layout_constraintStart_toEndOf="@+id/profileImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            motion:layout_constraintTop_toTopOf="@+id/profileImageView"
            android:visibility="visible" />
        <Constraint
            android:id="@+id/jobTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            motion:layout_constraintTop_toBottomOf="@+id/usernameTextView"
            motion:layout_constraintStart_toStartOf="@+id/usernameTextView"
            android:layout_marginTop="11dp"
            android:visibility="visible" />
    </ConstraintSet>
</MotionScene>